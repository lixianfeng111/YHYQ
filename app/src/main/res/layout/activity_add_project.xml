<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="客户信息："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/customer_information"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:hint="请输入公司名称"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="立项内容："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/project_content"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:hint="请输入立项内容"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="附件信息："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/accessory"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:hint="请选择附件信息"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Space
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22"
        android:text="提交"
        android:layout_marginBottom="@dimen/dp_90"
        android:background="@drawable/shape_login_btn"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>