<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F7"
    android:orientation="vertical"
    tools:context=".workbench.projectapproval.activity.ProjectDetailActivity">

<!--    <com.yhhl.yhyq.util.StatusBarHeightView-->
<!--        android:id="@+id/start"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:use_type="use_padding_top"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        tools:ignore="MissingConstraints" />-->

    <include layout="@layout/title_layout"
        android:id="@+id/title_in"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="客户信息："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/client_infor"
            android:gravity="right"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="北京市云合互联科技有限公司"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="立项内容："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/project_content"
            android:gravity="right"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15"
            android:text="XXXXXXXXXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear3"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="附件信息："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15"
            android:hint="附件信息一.jpg"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Space
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/back_btn"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_90"
        android:textSize="@dimen/sp_22"
        android:text="返回"
        android:background="@drawable/shape_login_btn"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>