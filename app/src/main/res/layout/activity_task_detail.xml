<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workbench.task.activity.TaskDetailActivity">

    <com.yhhl.yhyq.util.StatusBarHeightView
        android:id="@+id/start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:use_type="use_padding_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <include layout="@layout/title_layout"
        app:layout_constraintTop_toBottomOf="@+id/start"
        android:id="@+id/title_in"/>
    <LinearLayout
        android:id="@+id/linear1"
        app:layout_constraintTop_toBottomOf="@+id/title_in"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="任务编码："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_coding"
            android:text="1233444"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_1"
        android:id="@+id/linear2"
        app:layout_constraintTop_toBottomOf="@+id/linear1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:text="任务内容："
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_content"
            android:text="哈哈"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_1"
        android:id="@+id/linear3"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:text="任务进度："
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_progress"
            android:text="0"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_marginTop="@dimen/dp_1"
        app:layout_constraintTop_toBottomOf="@+id/linear3"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:text="计划人天："
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/plan_day"
            android:text="3天"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear4"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:text="开始时间："
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/start_time"
            android:text="2021-07-08"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear5"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:text="结束时间："
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/end_time"
            android:text="2021-09-08"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear7"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linear6"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:text="任务反馈："
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/feedback"
            android:text="日常常规通讯报销"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/color_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/back_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22"
        android:text="返回"
        android:layout_marginBottom="@dimen/dp_64"
        android:background="@drawable/shape_login_btn"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>