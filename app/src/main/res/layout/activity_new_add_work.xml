<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout"/>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="组织："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/select_organization"
            android:gravity="right"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:text="请选择组织"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="部门："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/dp_15"
            android:id="@+id/select_department"
            android:gravity="right"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_15"
            android:text="请选择部门"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="报销人："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/expense_user"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:hint="请输入姓名"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="报销金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/expense_money"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:phoneNumber="true"
            android:hint="请输入报销金额"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:text="备注："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/remark"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/color_50"
            android:textSize="@dimen/sp_15"
            android:hint="请填写备注信息"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Space
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_22"
        android:text="提交"
        android:layout_marginBottom="@dimen/dp_90"
        android:background="@drawable/shape_login_btn"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>