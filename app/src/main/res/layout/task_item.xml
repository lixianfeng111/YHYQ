<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_16"
    android:background="@drawable/shape_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/task_coding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="任务编码：09487980894"
        android:textSize="@dimen/textSize15"
        android:textColor="@color/color_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/task_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/task_coding"
        android:text="任务内容：xxxxxxxxxx"
        android:textSize="@dimen/textSize15"
        android:textColor="@color/color_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/task_progress"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/task_content"
        android:text="任务进度：20%"
        android:textSize="@dimen/textSize15"
        android:textColor="@color/color_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/plan_day"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/task_progress"
        android:text="计划人天：三天"
        android:textSize="@dimen/textSize15"
        android:textColor="@color/color_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/start_time"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/plan_day"
        android:text="开始时间：2021-7-19"
        android:textSize="@dimen/textSize15"
        android:textColor="@color/color_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/end_time"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/start_time"
        android:text="结束时间：2021-7-19"
        android:textSize="@dimen/textSize15"
        android:textColor="@color/color_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/feedback"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/end_time"
        android:text="任务反馈：xxxxxxxx"
        android:textSize="@dimen/textSize15"
        android:textColor="@color/color_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>